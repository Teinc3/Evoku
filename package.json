{
  "name": "evoku",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "ng serve --configuration development",
    "dev:server": "NODE_ENV=development tsx watch src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "ng build --configuration production",
    "build:server": "tsc --project tsconfig.server.json",
    "start": "concurrently \"npx serve -s dist/evoku -l 4200\" \"node dist/server/index.js\"",
    "watch": "ng build --watch --configuration development",
    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:client": "ng test",
    "test:server": "jest --config jest.config.cjs",
    "test:server-ci": "jest --config jest.config.cjs --coverage",
    "lint": "npx eslint ."
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "seedrandom": "^3.0.5",
    "sudoku-gen": "github:dainisp/sudoku-gen#278b154406faa37879a957bf9a766bd7c4fee36b",
    "tslib": "^2.3.0",
    "ws": "^8.18.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^20.2.0",
    "@angular-eslint/eslint-plugin-template": "^20.2.0",
    "@angular-eslint/template-parser": "^20.2.0",
    "@angular/build": "^20.0.5",
    "@angular/cli": "^20.0.5",
    "@angular/compiler-cli": "^20.0.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^7.0.0",
    "@stylistic/eslint-plugin": "^5.2.1",
    "@types/bidirectional-map": "^1.0.4",
    "@types/express": "^5.0.3",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/seedrandom": "^3.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "bidirectional-map": "^1.1.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "jasmine-core": "~5.7.0",
    "jest": "^30.0.4",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.38.0"
  }
}
