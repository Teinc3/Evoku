{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "Evoku": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src/client",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/client/main.ts",
            "preserveSymlinks": true,
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/client/globals.scss"
            ],
            "optimization": {
              "fonts": false
            }
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "config/shared/override.json",
                  "with": "config/shared/prod.json"
                }
              ],
              "outputHashing": "all",
              "budgets": [
                {
                  "type":"initial", 
                  "maximumWarning": "500kB", 
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle", 
                  "maximumWarning": "4kB", 
                  "maximumError": "8kB"
                }
              ]
            },
            "development": {
              "fileReplacements": [
                {
                  "replace": "config/shared/override.json",
                  "with": "config/shared/dev.json"
                }
              ],
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "port": 3713
          },
          "configurations": {
            "production": {
              "buildTarget": "Evoku:build:production"
            },
            "development": {
              "buildTarget": "Evoku:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "karmaConfig": "karma.conf.cjs",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/client/globals.scss"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "config/shared/override.json",
                  "with": "config/shared/prod.json"
                }
              ]
            },
            "development": {
              "fileReplacements": [
                {
                  "replace": "config/shared/override.json",
                  "with": "config/shared/dev.json"
                }
              ]
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
