/* TypeScript configuration for server-side code */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "types": ["node", "jest"],
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
  },
  "include": [
    "src/server/**/*.ts",
    "src/shared/**/*.ts",
    "scripts/**/*.ts",
    "config/**/*.json",
    "tsconfig.json", 
    "src/server/tsconfig-paths.loader.cjs"  
  ],
  "exclude": [
    "src/client/**/*.ts"
  ]
}
